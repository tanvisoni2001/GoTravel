<!-- Add Bootstrap CSS (from CDN) -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
  /* Custom styles for the sign-up card */
  .card {
    max-width: 500px;
    margin: 0 auto;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: none;
  }

  .card-title {
    text-align: center;
    font-size: 24px;
    margin-bottom: 20px;
  }

  .form-group label {
    font-weight: bold;
  }

  .form-signup {
    padding: 20px;
  }

  .btn-primary {
    width: 100%;
    font-size: 18px;
  }
</style>

<div class="container">
  <div class="card mt-5">
    <div class="card-body">
      <h2 class="card-title">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :type %><br />
          <%= f.select :type, User.types.index.map{|type| [type.humanize,type]}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :phone_no %><br />
          <%= f.number_field :phone_no, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address %><br />
          <%= f.text_area :address, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<!-- Add Bootstrap JavaScript (from CDN) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
