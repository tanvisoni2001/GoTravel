<div class="container mt-5">
  <h2>List of Confirmed Bookings </h2>
  <table class="table table-striped table-bordered table-hover">
	<thead class="thead-dark">
		<th>Tour Id</th>
		<th>Tour Name</th>
		<th>Pickup Date</th>
		<th>Dropping Date</th>
	</thead>
	<tbody>
		<% @bookings.each do |booking| %>
		<tr>
			<td><%= booking.tour_id %></td>
			<td><%= booking.tour.destination_name %></td>
			<td><%= booking.tour.pickup_date%></td>
			<td><%= booking.tour.dropping_date %></td>
		</tr>
		<% end %>
	</tbody>
  </table>
  <div class="btn-group d-flex justify-content-between">
    <%= link_to 'Back', root_path,class: 'btn btn-danger nav-link' %>
  </div>
</div>    

